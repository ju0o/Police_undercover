{
  "name": "zero_wiki",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:rules": "firebase emulators:exec --only firestore \"vitest run tests/rules/rules.test.ts\"",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "deploy": "firebase deploy",
    "serve": "firebase emulators:start",
    "seed:wiki": "firebase emulators:exec --only firestore \"tsx scripts/seed/seed-wiki.ts\"",
    "seed:templates": "firebase emulators:exec --only firestore \"tsx scripts/seed/seed-templates.ts\"",
    "seed:discussions": "firebase emulators:exec --only firestore \"tsx scripts/seed/seed-discussions.ts\"",
    "seed:watchlist": "firebase emulators:exec --only firestore \"tsx scripts/seed/seed-watchlist.ts\"",
    "seed:set-roles": "firebase emulators:exec --only firestore \"tsx scripts/seed/set-roles.ts\"",
    "seed:all": "npm run seed:wiki && npm run seed:templates && npm run seed:discussions && npm run seed:watchlist && npm run seed:set-roles",
    "create:admin:prod": "tsx scripts/prod/create-admin.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.84.1",
    "classnames": "^2.5.1",
    "firebase": "^12.1.0",
    "mdast-util-to-string": "^4.0.0",
    "minisearch": "^7.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "zod": "^4.0.15",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@firebase/rules-unit-testing": "^3.0.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "firebase-admin": "^13.4.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
